@model IEnumerable<DevIO.App.ViewModels.SupplierViewModel>

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<h1>@ViewData["Title"]</h1>


<br />
<p style ="width:100%">
    <div class="card" >
        <div class="card-header">
            <button class="btn btn-link dropdown-toggle text-infocenter" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Filters
            </button>
        </div>
        <form asp-action="Index" method="get">
            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="Code">Code</label>
                            <input type="text" class="form-control" id="Code" name="Code" placeholder="Code" aria-label="Code" value="Code" aria-describedby="basic-addon2">
                        </div>

                        <div class="form-group col-md-4">
                            <label for="LegacyCode">Legacy Code</label>
                            <input type="text" class="form-control" id="LegacyCode" name="LegacyCode" placeholder="Legacy Code" aria-label="Controller" value="LegacyCode" aria-describedby="basic-addon2">
                        </div>

                        <div class="form-group col-md-4">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" aria-label="Action" value="Name" aria-describedby="basic-addon2">
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-12 text-left">
                            <input type="submit" name="actionButton" value="Pesquisar" class="btn btn-infocenter" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <br />
    <a class="btn btn-info" asp-action="Create">Novo Fornecedore</a>
</p>

<table class="table table-hover" style="width: 100%;">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeSupplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Document)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(model => item.TypeSupplier)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"> <span class="fa fa-search"></span> </a>|
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"> <span class="fa fa-pencil-alt"></span></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"> <span class="fa fa-trash-alt"></span> </a>
                </td>
            </tr>
        }
    </tbody>
</table>

